$font-color = #586069
$theme-color = #4688f1
$bg-color = #f7f8fa


*
  padding 0
  margin 0
  color $font-color
  font-family sans-serif

a
  color $theme-color
  text-decoration none
  &:link, &:visited
  &:hover, &:active
    color $theme-color

ul
  list-style none

::selection
  background $theme-color
  color #fff

.page
  width 100%
  min-height 100vmax
